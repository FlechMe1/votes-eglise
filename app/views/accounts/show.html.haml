.breadcrumbs
  .page-header
    %h1 Mon compte

.content.mt-3
  .container-fluid
    .row
      .col-md-6
        .client.card
          .card-body
            .mx-auto.d-block
              .text-center
                .client-title.mt-2.mb-1
                  %h3= @user.fullname
                  %p
                    = icon 'fa', 'id-card'
                    = @user.friendly_id
              .client-info
                %address
                  - unless @user.full_address.blank?
                    = @user.full_address
                    %hr

                  %ul.fa-ul
                    %li
                      = icon 'fa', 'envelope', class: "fa-li"
                      = link_to "mailto:#{@user.email}" do
                        = @user.email

                    - if @user.phone_1?
                      %li
                        = icon 'fa', 'phone', class: "fa-li"
                        = @user.phone_1
                    - if @user.phone_2?
                      %li
                        = icon 'fa', 'phone', class: "fa-li"
                        = @user.phone_2

                    - if @user.birthdate?
                      %li
                        = icon 'fa', 'birthday-cake', class: "fa-li"
                        = l @user.birthdate

          .card-footer
            = link_to edit_me_path, class: 'btn btn-outline-dark btn-icon' do
              = icon 'fa', "edit"
              Modifier mon profil
